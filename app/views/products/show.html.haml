%p#notice= notice
%p#error= flash[:error]

.product.jumbotron
  %h3
    %b Category:
    = product.category.name
  .panel.panel-primary
    .panel-heading
      = product.title
    .panel-body
      = product.description
    .panel-footer
      %p
        %b Price:
        = product.price



- if current_user
  .panel.panel-default
    .panel-heading
      %h3 Reviews
    .panel-body
      = render 'reviews/form'

= render reviews

-if current_user && current_user.id = product.user_id
  = link_to 'Edit', edit_category_product_path(category.id, product.id), class: 'btn btn-primary'
  \|
= link_to 'Back', category_products_path, class: 'btn btn-primary'
